{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "es2020",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@phobos/*": ["./src/*", "./dist/*"],
      "@phobos/emoji": ["./src/emoji.json", "./dist/emoji.json"]
    }
  },
  "include": ["./src/**/*"]
}
