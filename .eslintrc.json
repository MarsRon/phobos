{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true,
		"browser": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-extra-semi": "error",
		"space-before-function-paren": ["error", {
			"anonymous": "always",
			"named": "never",
			"asyncArrow": "always"
		}],
		"eqeqeq": "error",
		"no-duplicate-imports": "error",
		"no-const-assign": "error",
		"no-var": "error",
		"no-this-before-super": "error",
		"no-unreachable": "error"
	},
	"ignorePatterns": ["Economy-Bot/**"]
}
